<div class="row">
  <div class="col m12">
    <div class="card blue-grey darken-1">
      <div class="card-image">
        <iframe width="100%" height="360" src="https://www.youtube.com/embed/<%= @course.video %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      </div>
      <div class="card-content white-text">
        <div class="row">
          <div class="col m2 center">
            <%= image_tag "courses/#{@course.cover}" %>
          </div>
          <div class="col m8">
            <span class="card-title"><%= @course.title %></span>
            <% (1..@course.star_number).each do %>
              <i class="material-icons">grade</i>
            <% end %>
            <p><%= @course.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>